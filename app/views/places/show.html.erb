		<div class="page-header"><h2><%= @place.name %> | <%= @place.city %>, <%= @place.state %></h2>
					<%= link_to 'Edit', edit_place_path(@place), title: 'Click if you wish to edit this Halal Spot', rel: 'tooltip', "data-placement" => "bottom" %> |
		 <%= link_to 'Not Sunni', "#", title: 'If this spot is not Sunni, click here and let us know.', rel: 'tooltip', "data-placement" => "bottom" %> | <%= link_to 'Back', places_path %>
		</div>

			<div class="row">
				<div class="span5">
					<div class="img-polaroid">
						<%= image_tag @place.image(:large) %>
					</div>
				</div>

				<div class="span5">	
					<div class="img-polaroid">	
						<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=
						#{@place.latitude}%2C#{@place.longitude}" %>
					</div>
				</div>
			</div><br>

			<div class="row">
				<div class="span10">
					<div class="well white">
						<h3>Basic Information</h3>
						<strong>Type of Halal Spot:</strong><br><%= @place.category %><br><br>
						<strong>Description:</strong><br><%= @place.description %><br><br>

						<strong>Website:</strong><br><%= link_to @place.website, @place.website %><br><br>
						<!-- "http://www.#{@place.website}" I used this before to generate the link for the website --> 

						<strong>Address:</strong><br><%= @place.address %><br>
						<%= @place.city %>, <%= @place.state %> <%= @place.zipcode %><br><br>
						<strong>Phone Number:</strong><br><%= @place.phone %><br>
						
					</div>
				</div>
			</div>		
			
