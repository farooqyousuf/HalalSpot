<div class="row">
	<h2>Newly Added Halal Spots</h2>

		<%= form_tag places_path, :method => :get do %>
				<%= text_field_tag :search, params[:search], placeholder: "Enter your zipcode", class: "search-query"  %>
				<%= submit_tag "Search Nearby", :name => nil, class: "btn"%>
		<% end %>

	<table class="table table-hover table-condensed">
		<thead>
	  		<tr>			
				 <th>Image</th>
			   <th>Name</th>
			   <th>Address</th>
				 <th>State</th>
				 <th>City</th>
				 <th>Type</th>
			   <th>Website</th>
			 </tr>
		</thead>

		<tbody>
			<%= render @places %>
		</tbody>

	</table>
</div>

<br />

<% else %>

<%= render 'static_pages/home' %>

<% end %>