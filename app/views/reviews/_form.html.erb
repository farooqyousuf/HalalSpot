<%= simple_form_for([@place, @place.reviews.build]) do |f| %>

	<%= f.error_notification %>
	<%= f.full_error :reviewer, class: "alert alert-error" %>
	<%= f.full_error :body, class: "alert alert-error" %>

	<div class="form-inputs">
    <%= f.input :reviewer, label: 'Name' %>
		<%= f.input :body, as: :text, input_html: { rows: 5 }, label: 'Review'  %>
	</div>
	
	<div class="form-actions">
    <%= f.button :submit, "Save" ,class: "btn btn-primary" %>
  </div>

<% end %>